<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <!-- Package information -->
    <id>{{WORKLOAD_NAME}}</id>
    <version>{{WORKLOAD_VERSION}}</version>
    <authors>author</authors>
    <owners>owner</owners>
    <description>A NuGet package that holds the manifests for the {{WORKLOAD_NAME}} workload.</description>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
  </metadata>
  <files>
    <!-- Include the XML and FE files -->
    <file src="{{MANIFEST_FOLDER}}\*.xml" target="BE" />
    <file src="{{MANIFEST_FOLDER}}\*.json" target="FE" />
    <file src="{{MANIFEST_FOLDER}}\assets\**" target="FE\assets" />
    <!-- TODO will be added once schemas are allowed -->
    <!-- file src="{{MANIFEST_FOLDER}}\items\**" target="items" / -->
  </files>
</package>
